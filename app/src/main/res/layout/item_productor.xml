<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/t_nombreItemProductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "/>
                <TextView
                    android:id="@+id/t_claveItemProductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clave interbancaria: "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/t_ApellidosItemProductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellidos: "/>
                <TextView
                    android:id="@+id/t_direccionPItemProductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dirección: "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/t_TelItemProductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teléfono: "/>
                <TextView
                    android:id="@+id/t_EmailPItemProductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEditItem"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/img_button_rounded"
                    android:src="@drawable/ic_edit_item"
                    tools:src="@drawable/ic_edit_item"
                    android:backgroundTint="#B50C3C"/>
                <ImageButton
                    android:layout_margin="5dp"
                    android:id="@+id/btnDeleteItem"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/img_button_rounded"
                    android:src="@drawable/ic_delete_item"
                    tools:src="@drawable/ic_delete_item"
                    android:backgroundTint="#B50C3C"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>